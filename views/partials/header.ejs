<!DOCTYPE html>
<html>
  <head>
    <title>Notes_Maker</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/public/stylesheets/main.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css



      "
    />
  </head>
  <body
    style="
      background-image: url('https://images.unsplash.com/photo-1488998427799-e3362cec87c3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80');
      background-size: cover;
      background-repeat: no-repeat;
      display: block;
      height: 100%;
    "
  >
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Notes_Maker</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if(!currentUser){ %>
            <li>
              <a href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
            </li>
            <li>
              <a href="/register"><i class="fas fa-user-alt"></i> Sign Up</a>
            </li>
            <% } else { %>
            <li>
              <a href="#">
                <i class="fas fa-user-alt"></i>

                Signed In As <%= currentUser.username %></a
              >
            </li>
            <li>
              <a href="#"
                ><i class="fas fa-chalkboard-teacher"></i> Classroom :
                <%=currentUser.class_name%>
              </a>
            </li>
            <li>
              <a href="/logout"><i class="fas fa-sign-out-alt"></i>Logout</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if(error && error.length > 0){ %>
      <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } %> <% if(success && success.length > 0){ %>
      <div class="alert alert-success" role="alert"><%= success %></div>
      <% } %>
    </div>
  </body>
</html>

<%-include('partials/header') %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Notes_Maker</p>
      <div class="list-group">
        <li class="list-group-item active">Share</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="/image/<%=file.filename%>" />
        <div class="caption-full">
          <h4><a><%=file.filename%></a></h4>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/comment/<%=file.filename%>"
            >Add New Comment</a
          >
        </div>
        <hr />
        <% Comment.forEach(function(comment){ %> <%
        if(comment.filename==file.filename){%>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author %></strong>

            <span class="pull-right">Time will display here</span>

            <p><%= comment.text %></p>
            <% if(comment.userId == req.user._id) { %>
            <form
              action="/notes/filename/<%=comment._id%>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-danger">Delete</button>
            </form>
            <%}%>
          </div>
        </div>
        <% }%> <% }) %>
      </div>
    </div>
  </div>
</div>

<%-include('partials/footer') %>
